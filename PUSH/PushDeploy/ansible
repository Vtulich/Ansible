[defaults]
inventory = /etc/ansible/hosts
roles_path = /etc/ansible/roles
vault_password_file = /var/secret/ansible_vault_pass
###Позволяет не выводить на экран скипнутые таски###
display_skipped_hosts = false
###Определяет количество рабочих процессов, которые будут одновременно подключаться к хостам и выполнять таски.###
forks = 20
###Показывает время выполнения таска###
callback_whitelist = profile_tasks